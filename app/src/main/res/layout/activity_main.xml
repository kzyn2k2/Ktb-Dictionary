<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="100px"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="300dp"
        android:layout_height="140px"
        android:layout_marginStart="50px"
        android:id="@id/txttext"></EditText>

    <ImageView
        android:id="@+id/clear_search_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txttext"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:paddingTop="10.0dip"
        android:paddingRight="45dp"
        android:src="@drawable/clear"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txttext"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="-8dp"
        android:clickable="true"
        android:paddingTop="10.0dip"
        android:paddingRight="5.0dip"
        android:src="@drawable/search" />

    <CheckBox
        android:id="@+id/Chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-15dp"
        android:layout_toRightOf="@+id/txttext"
        android:button="@drawable/check_custom" />

    <ListView
        android:id="@+id/lstShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="-9dp" />
</RelativeLayout>