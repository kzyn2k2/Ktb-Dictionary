<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="25dp" android:id="@+id/txtkanji" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:textSize="20dp" android:id="@+id/txtkana" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/txtkanji" android:layout_marginTop="10px" />
    <TextView android:textSize="20dp" android:id="@+id/txthinshi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/txtkana" android:layout_below="@id/txtkanji" />
    <TextView android:textSize="20dp" android:id="@+id/txtmmtrans" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/txthinshi" android:layout_marginTop="10px"/>
    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtmmtrans"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp">
    </TextView>
    <TextView android:textSize="20dp" android:id="@+id/txtreibun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/txtmmtrans" android:textIsSelectable="true"/>
    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/txtreibun"
        android:layout_marginTop="20dp"
        android:textStyle="bold"></TextView>
    <TextView android:textSize="20dp" android:id="@+id/txtkantanimi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/txtreibun" android:textIsSelectable="true" />
</RelativeLayout>